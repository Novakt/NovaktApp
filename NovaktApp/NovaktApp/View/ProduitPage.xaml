<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovaktApp.View.ProduitPage">
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,20,0,0" x:Name="ProduitImage" Source="{Binding Produit.LienImage}"  HorizontalOptions="Center" WidthRequest="200"/>
                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding Produit.Nom}"     TextColor="#005da7" FontSize="Large" HorizontalTextAlignment="Center" HorizontalOptions="Center" FontAttributes="Bold"/>
               <!-- <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BackgroundColor="Red" />
                <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" BackgroundColor="Blue" />-->
                <Label Grid.Row="2" Grid.Column="0" Text="Référence"    FontSize="Small"   TextColor="#005da7" VerticalOptions="Center"  Margin="5,0,0,0"  HorizontalTextAlignment="End"  VerticalTextAlignment="Center" FontAttributes="Bold"/>
                <Label Grid.Row="3" Grid.Column="0" Text="Type"         FontSize="Small"   TextColor="#005da7" VerticalOptions="Center"  Margin="5,0,0,0"  HorizontalTextAlignment="End"  VerticalTextAlignment="Center" FontAttributes="Bold"/>
                <Label Grid.Row="4" Grid.Column="0" Text="Description"  FontSize="Small"   TextColor="#005da7" VerticalOptions="Center"  Margin="5,0,0,0"  HorizontalTextAlignment="End"  VerticalTextAlignment="Center" FontAttributes="Bold"/>

                <Label Grid.Row="2" Grid.Column="1"  TextColor="#005da7"  VerticalOptions="Center"   Text="{Binding Produit.Reference}"/>
                <Label Grid.Row="3" Grid.Column="1"  TextColor="#005da7"  VerticalOptions="Center"   Text="{Binding Produit.Type}"/>
                <Label Grid.Row="5" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="2" TextColor="#005da7"   Text="{Binding Produit.Description}"/>

            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>