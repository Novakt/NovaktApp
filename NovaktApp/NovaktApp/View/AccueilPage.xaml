<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovaktApp.View.AccueilPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="Produits"  HorizontalOptions="Center"  WidthRequest="200"  Text="Produits"           TextColor="White"  BackgroundColor="#005da7"   Opacity="0.75"  Margin="0,5,0,5"  Command="{Binding CategorieProduitCommand}" />
        <Button Grid.Row="1" x:Name="Chantiers" HorizontalOptions="Center"  WidthRequest="200"  Text="Chantiers réalisés" TextColor="White"  BackgroundColor="#005da7"   Opacity="0.75"  Margin="0,5,0,5"  Command="{Binding ListeChantierCommand}"/>
        <Button Grid.Row="2" x:Name="Clients"   HorizontalOptions="Center"  WidthRequest="200"  Text="Client"             TextColor="White"  BackgroundColor="#005da7"   Opacity="0.75"  Margin="0,5,0,5"  Command="{Binding ClientsCommand}"/>
        <Button Grid.Row="3"                    HorizontalOptions="Center"  WidthRequest="200"  Text="Synchroniser"       TextColor="White"  BackgroundColor="#005da7"   Opacity="0.75"  Margin="0,5,0,5" />
  </Grid>
</ContentPage>